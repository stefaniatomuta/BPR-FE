@using BPR.Mediator.Services
@inject IRuleService Service

@if (_rules is null)
{
    <p>Loading...</p>
}
else if (!_rules.Any())
{
    <p>No rules found in the database...</p>
}
else
{
    @foreach (var item in _rules)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="@item.Name" checked= "@item.IsChecked" @onchange="(e) => CheckboxChanged(e, item)" />
            <label class="form-check-label" for="@item.Name">@item.Name</label>
            <div>@item.Description</div>
        </div>
    }
}