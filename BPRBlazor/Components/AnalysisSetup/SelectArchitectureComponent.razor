@using BPRBE.Services
@inject IDependencyService DependencyService
@if (ArchitecturalOptions == null)
{
    <div>Loading...</div>
}
else if(!ArchitecturalOptions.Any()){
    <div>Oops...something went wrong</div>
}
else {
    <select class="mb-5" @onchange="OnSelectedValueChanged">
        <option hidden>Select an architectural model</option>
        @foreach (var op in ArchitecturalOptions)
        {
            <option value="@op.Name">@op.Name</option>
        }
    </select>
}


