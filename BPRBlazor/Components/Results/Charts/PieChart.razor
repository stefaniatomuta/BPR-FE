@using Radzen.Blazor

<RadzenChart Style="height: 500px; width: 100%">
    <RadzenPieSeries 
        Radius="180" 
        Fills=@(new [] {"#6f13a9", "#9b83af", "#955cb8", "#cccccc" }) 
        Data="@_data"
        Title="Revenue"
        CategoryProperty="Label"
        ValueProperty="Value">
        <RadzenSeriesDataLabels Visible="@ShowDataLabels" />
    </RadzenPieSeries>
    <RadzenLegend Position="LegendPosition.Bottom" />
</RadzenChart>

